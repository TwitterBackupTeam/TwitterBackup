@model TwitterBackup.Web.Models.AddFavouriteTweetsViewModels.AddFavouriteTweetsViewModel

<h2>Add Favourite Tweets</h2>

@{ await Html.RenderPartialAsync("AddFavTweeter", Model.TweeterViewModel); }

<form asp-controller="AddFavouriteTweets" asp-action="AddFavouriteTweets" method="post">

    @for (int i = 0; i < @Model.Tweets.Count; i++)
    {
        <div class="tweet">
            @Html.HiddenFor(t => Model.Tweets[i].Id)
            <p>
                @Html.DisplayTextFor(t => Model.Tweets[i].Text)
                @Html.CheckBoxFor(t => Model.Tweets[i].Favourite)
            </p>
            <br />
        </div>
    }

            <input type="submit" class="btn btn-primary " value="Save" />

    </form>